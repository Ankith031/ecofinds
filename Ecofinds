<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>EcoFinds - Sustainable Marketplace</title>
</head>
<body>
    <h1>EcoFinds - Sustainable Marketplace</h1>
    <!-- Authentication -->
    <div id="auth">
        <h2>Login</h2>
        <input id="email" placeholder="Email"/><br/>
        <input id="password" type="password" placeholder="Password"/><br/>
        <button onclick="login()">Login</button>
        <button onclick="signup()">Sign Up</button>
    </div>
    <!-- Product Listing (after login) -->
    <div id="market" style="display:none;">
        <h2>Product Listings</h2>
        <input id="search" placeholder="Search" oninput="filterList()"/>
        <div id="listings"></div>
        <button onclick="showAddProduct()">+ Add New Product</button>
        <!-- Add Product Form -->
        <div id="addProduct" style="display:none;">
            <h3>Add New Product</h3>
            <input id="prodTitle" placeholder="Title"/><br/>
            <input id="prodCategory" placeholder="Category"/><br/>
            <input id="prodDesc" placeholder="Description"/><br/>
            <input id="prodPrice" type="number" placeholder="Price"/><br/>
            <button onclick="addProduct()">Submit Listing</button>
        </div>
    </div>
    <script>
        // Simple frontend logic for demonstration (no persistence)
        let loggedIn = false;
        let products = [];
        function login(){ loggedIn=true; document.getElementById('auth').style.display='none'; document.getElementById('market').style.display='block'; }
        function signup(){ alert("Account created."); login(); }
        function showAddProduct(){ document.getElementById('addProduct').style.display='block';}
        function addProduct(){
            products.push({
                title: document.getElementById('prodTitle').value,
                category: document.getElementById('prodCategory').value,
                description: document.getElementById('prodDesc').value,
                price: document.getElementById('prodPrice').value
            });
            filterList();
            document.getElementById('addProduct').style.display='none';
        }
        function filterList(){
            let search = document.getElementById('search').value.toLowerCase();
            let html = "";
            products.forEach((p, i)=>{
                if(p.title.toLowerCase().includes(search) || p.category.toLowerCase().includes(search)){
                    html += `<div><b>${p.title}</b> (${p.category}) - â‚¹${p.price}<br/>${p.description}</div>`;
                }
            });
            document.getElementById('listings').innerHTML = html;
        }
    </script>
</body>
</html>
